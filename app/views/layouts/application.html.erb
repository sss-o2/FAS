<!DOCTYPE html>
<html class="h-100">
  <head>
    <title>FAS</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <!--<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>-->
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.2/css/all.css" integrity="sha384-oS3vJWv+0UjzBfQzYUhtDYW+Pj2yciDJxpsK1OYPAYjqT085Qq/1cq5FLXAZQ7Ay" crossorigin="anonymous">
    <link href="https://fonts.googleapis.com/css2?family=Cormorant+Garamond:wght@300;700&family=Julius+Sans+One&family=Lato:wght@300&display=swap" rel="stylesheet">
  </head>

  <body>
  <div id="wrapper">
      <div class="container mt-5">
        <% unless user_signed_in? %>
          <%= render partial: 'layouts/header' %>
        <% else %>
          <%= render partial: '/users/header' %>
        <% end %>
      </div>

        <% unless current_page?(root_path) || current_page?(posts_path) %>
         <div class="container alert_notice">
          <div id="notice"><%= notice %></div> 
          <div id="alert"><%= alert %></div>
         </div>
        <% end %>

      <%= yield %>
     
      <%= render partial: 'layouts/footer' %>
  </div>

<span id="top">
      <a href="#">
        <i class="fas fa-arrow-circle-up fa-3x top_arrow"></i>
      </a>
</span>

  </body>
</html>
