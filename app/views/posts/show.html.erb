<div class="d-flex align-items-center mt-4 mb-4">
    <div class="ml-auto posts_button">
        <%= link_to "投稿一覧", posts_path, class: 'btn btn-outline-info' %>
        <% if current_user.id==@post.user_id %>
          <%= link_to "編集", edit_post_path, class: 'btn btn-outline-info' %>
        <% end %>
    </div>
</div>

<div class="card">
  <div class="card-header bg-info text-white">
      <h4><%= @post.title %></h4>
  </div>
  <div class="card-body">
      <p class="card-text"><%= @post.body %></p>

      <% if @post.post_images.present? %>
        <% @post.post_images.each do |image| %>
          <%= attachment_image_tag image, :image, :fill, 200, 200 %>
        <% end %>
      <% end %>
      
      <% unless current_user.id==@post.user_id %>
          <%= link_to "返信する", new_post_comment_path(@post.id), class: 'btn btn-outline-info' %>
      <% end %>
  </div>
  <div class="card-footer">
    <p class="text-right font-weight-bold mr-10"><%= @post.user.name %></p>
  </div>
</div>

<% @comments.each do |comment| %>
<div class="card">
 <div class="card-header bg-info text-white">
 ユーザーアイコン
      <%= comment.user.name %>
      <%= comment.created_at %>
      <%= comment.updated_at %>
      <br/>
 </div>
  <div class="card-body">
      <p class="card-text">
       <%= comment.body %>
      </p>

      <% if comment.post_images.present? %>
        <% comment.post_images.each do |image| %>
          <%= attachment_image_tag image, :image, :fill, 200, 200 %>
        <% end %>
      <% end %>
      
      <% if current_user.id==comment.user_id %>
        <%= link_to "編集", edit_post_comment_path(comment), class: 'btn btn-outline-info' %>
      <% end %>
      <br/>
  </div>
</div>
<% end %>