<div class="container mt-4 text-center">
<h3>パスワード再設定画面</h3>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put, class: "form-signin_up" }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <%= f.hidden_field :reset_password_token %>

  <div class="field">
    <%= f.label :password, "新しいパスワード" %><br />
    <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> 文字以上)</em><br />
    <% end %>
    <%= f.password_field :password, autofocus: true, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, "再入力（確認用）" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "パスワードを変更する",class: "submit_button" %>
  </div>
<% end %>

<%= render "users/shared/links" %>
</div>