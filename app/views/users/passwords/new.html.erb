<div class="container mt-4">
<div class="text-center">
<h3>パスワードをリセットしますか？</h3>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post,class: "form-signin_up" }) do |f| %>
  <%= render "users/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :email,{class: 'sr-only'} %><br />
    <%= f.email_field :email, autofocus: true, :placeholder => "email",autocomplete: "email",class: "form-control" %>
  </div>

  <div class="actions">
    <!--<button class="btn btn-lg btn-primary btn-block" type="submit" style="margin-top:10px">Sign up</button>-->
    <%= f.submit "パスワード変更メールを送信する",class: "btn btn-lg btn-primary btn-block submit_button" %>
  </div>
<% end %>

<%= render "users/shared/links" %>
</div>
</div>
