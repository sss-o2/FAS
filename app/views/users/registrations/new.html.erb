<div class="text-center">
<%= form_for(resource, as: resource_name, url: registration_path(resource_name),html: { class: "form-signin_up" }) do |f| %>
  <h2>Sign up</h2>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :email,{class: 'sr-only'} %><br />
    <%= f.email_field :email, autofocus: true, :placeholder => "email",autocomplete: "email",class: "form-control" %>
  </div>

  <div class="field">
    <%= f.label :name,{class: 'sr-only'} %><br />
    <%= f.text_field :name,:placeholder => "name", autofocus: true,class: "form-control" %>
  </div>
  <% if @user.uid.nil? %>
  <div class="field">
    <%= f.label :password,{class: 'sr-only'} %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, :placeholder => "password",autocomplete: "new-password",class: "form-control" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation,{class: 'sr-only'} %><br />
    <%= f.password_field :password_confirmation,:placeholder => "confirm password", autocomplete: "new-password",class: "form-control" %>
  </div>
  <% end %>

  <div class="actions">
    <button class="btn btn-lg btn-primary btn-block" type="submit" style="margin-top:10px">Sign up</button>
  </div>
<% end %>

<%= render "users/shared/links" %>
</div>
