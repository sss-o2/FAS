<div class="container mt-4">
<div class="text-center">
  <h2>Sign up</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name),html: { class: "form-signin_up" }) do |f| %>
    <%= render "users/shared/error_messages", resource: resource %>

    <div class="field">
      <%= f.label :email,{class: 'sr-only'} %><br />
      <%= f.email_field :email, autofocus: true, :placeholder => "email",autocomplete: "email",class: "form-control" %>
    </div>

    <div class="field">
      <%= f.label :name,{class: 'sr-only'} %><em><% @max_name_length %></em><br />
      <%= f.text_field :name,:placeholder => "name（４〜20文字）", autofocus: true,class: "form-control" %>
    </div>
      
    <% if @user.uid.nil? %>
      <div class="field">
        <%= f.label :password,{class: 'sr-only'} %><br/>
        <% if @minimum_password_length %>
          <%= f.password_field :password, :placeholder => "password（#{@minimum_password_length}文字以上）",autocomplete: "new-password",class: "form-control" %>
        <% else %>
          <%= f.password_field :password, :placeholder => "password",autocomplete: "new-password",class: "form-control" %>
        <% end %>
      </div>
      <div class="field">
        <%= f.label :password_confirmation,{class: 'sr-only'} %><br />
        <%= f.password_field :password_confirmation,:placeholder => "confirm password", autocomplete: "new-password",class: "form-control" %>
      </div>
    <% end %>

    <div class="actions">
      <button class="btn btn-lg btn-primary btn-block" type="submit" style="margin-top:10px">Sign up</button>
    </div>
    
  <% end %>

  <p><%= link_to "利用規約", home_terms_path %>と<%= link_to "プライバシーポリシー", home_privacy_path %>をご確認ください。<br>会員登録された場合、これらに同意したものといたします</p>

<%= render "users/shared/links" %>
</div>
</div>