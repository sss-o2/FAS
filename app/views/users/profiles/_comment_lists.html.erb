<h4 class="card-title">いいねしたコメント一覧（全<%= user_favorite_comments_count %>件）</h4>
  <p class="card-text">
    <% user_favorite_comments.each do |comment| %>
      <div class="row">
        <div class="col-md-2 text-right">
          <%= link_to users_profile_path(comment.user_id) do %>
                <%= attachment_image_tag comment.user.profile, :icon_image, :fill, 60, 60, fallback: "no_image.jpg", class: "rounded-circle pull-left profile-thumb" %><br>
                <%= comment.user.name %>
          <% end %>
        </div>
        <div class="col-md-10 text-left">
          <%= link_to comment.body,post_path(comment.post_id),class: "text_overflow text-muted" %>
          <div class="text-muted"><%= comment.created_at.strftime("%Y-%m-%d %H:%M") %></div>
        </div>
      </div>
      </p>
      <hr/>
    <% end %>
  </p>
<%= paginate user_favorite_comments %>